    tools:showIn="@layout/activity_word_set"
    tools:context="com.example.sadahide.desirenotificationforandroid.WordSetActivity">

    <!-- 通信を開始 -->
    <Button
        android:id="@+id/btn1"
        android:layout_height="wrap_content"
