        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:padding="20dp"
        android:textSize="22dp"
        android:text="設定"
        ></Button>


    <!-- 通信の結果を表示 -->
    <TextView
        android:id="@+id/tv1"
        android:layout_width="fill_parent"
